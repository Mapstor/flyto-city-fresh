generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model City {
  id             String   @id @default(cuid())
  slug           String   @unique
  name           String
  country        String
  countryCode    String
  iataCode       String?
  population     Int?
  description    String?
  metaDescription String?
  content        String?  @db.Text
  imageUrl       String?
  imageCredit    String?
  latitude       Float?
  longitude      Float?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
